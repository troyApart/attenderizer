<h1>Listing rsvps</h1>

<table align="center">
  <thead>
    <tr>
      <th>Guest</th>
      <th>Event</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rsvps.each do |rsvp| %>
      <tr>
        <td><%= rsvp.guest_id %></td>
        <td><%= rsvp.event_id %></td>
        <td><%= rsvp.answer %></td>
        <td><%= link_to '', rsvp, :class => "fa fa-eye", :style => "color:blue;" %></td>
        <td><%= link_to '', edit_rsvp_path(rsvp), :class => "fa fa-edit", :style => "color:blue;" %></td>
        <td><%= link_to '', rsvp, method: :delete, data: { confirm: 'Are you sure?' }, :class => "fa fa-trash-o", :style => "color:red;" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Rsvp', new_rsvp_path, :type => "button", :class => "btn btn-primary" %>
