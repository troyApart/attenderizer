<p id="notice"><%= notice %></p>

<p>
  <strong>Details:</strong>
  <%= @event.details %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.date %>
</p>

<p>
  <strong>Time interval in seconds:</strong>
  <%= @event.time_interval %>
</p>

<p>
  <strong>Time of last send:</strong>
  <%= @event.time_of_last_send %>
</p>

<p>
  <strong>Time for first send:</strong>
  <%= @event.time_for_first_send %>
</p>

<div class="guests"></div>
<table align="center">
    <thead>
    <tr>
        <th>Name</th>
        <th>Phone</th>
        <th colspan="3"></th>
    </tr>
    </thead>
    <% @guests.each do |guest| %>
        <tr>
            <td><%= guest.name %></td>
            <td><%= guest.phonenumber %></td>
        </tr>
    <% end %>
</table>
</div>

<%= link_to 'Back', events_path, :type => "button", :class => "btn btn-danger" %> |
<%= link_to 'Edit', edit_event_path(@event), :type => "button", :class => "btn btn-primary" %>

