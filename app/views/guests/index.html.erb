<h1>Listing guests</h1>

<table align="center">
  <thead>
    <tr>
      <th>Name</th>
      <th>Phonenumber</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @guests.each do |guest| %>
      <tr>
        <td><%= guest.name %></td>
        <td><%= guest.phonenumber %></td>
        <td>&nbsp;<%= link_to '', guest, :class => "fa fa-eye", :style => "color:blue;" %>&nbsp;</td>
        <td><%= link_to '', edit_guest_path(guest), :class => "fa fa-edit", :style => "color:blue;" %>&nbsp;</td>
        <td><%= link_to '', guest, method: :delete, data: { confirm: 'Are you sure?' }, :class => "fa fa-trash-o", :style => "color:red;" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'Logout', root_path, :type => "button", :class => "btn btn-danger" %> |
<%= link_to 'New Guest', new_guest_path, :type => "button", :class => "btn btn-primary" %> |
<%= link_to 'Add Events', events_path, :type => "button", :class => "btn btn-primary" %>
